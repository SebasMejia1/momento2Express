<%- include('partials/_headers') %>
<div class="container justify-content-center d-flex">
    <div class="card my-5 w-50">
      <div class="card-header text-center">
        <h5>Login a renta de carros</h5>
        <strong
            class="<%= carroExists ? 'd-block' : 'd-none'%> text-danger"
          >
            La placa ya existe, por favor intente con otra
          </strong>
      </div>
      <div class="card-body">
        <form action="/NewCars" class="text-center mx-5" method="post">
          <div class="form-group">
            <label for="plateNumber">Numero de placa</label>
            <input type="text" class="form-control" name="plateNumber" required />
          </div>
          <div class="form-group">
            <label for="brand">Marca</label>
            <input
              type="text"
              class="form-control"
              name="brand"
              required
            />
          </div>
          <div class="form-group">
            <label for="state">Estado</label>
            <input type="text" class="form-control" name="state" required />
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-success w-100">Crear carro</button>
          </div>
          <div class="col text-center">
            <a href="/rents"><i>Â¿Deseas hacer una renta?</i> </a>
          </div>
        </form>
      </div>
    </div>
  </div>
<%- include('partials/_footer')%>
