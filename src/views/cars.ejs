<% include partials/_headers %>
<div class="container justify-content-center d-flex">
    <div class="card my-5 w-50">
      <div class="card-header text-center">
        <h5>Login a renta de carros</h5>
        <strong
          class="<%= usuarioExists ? 'd-block' : 'd-none'%> text-danger"
        >
          El usuario ya existe, por favor inicie sesion
        </strong>
        <strong
          class="<%= logeoInvalido ? 'd-block' : 'd-none'%> text-danger"
        >
          Usuario y/o contrase√±a invalido
        </strong>
      </div>
      <div class="card-body">
        <form action="/NewCar" class="text-center mx-5">
          <div class="form-group">
            <label for="plateNumber">Numero de placa</label>
            <input type="text" class="form-control" name="plateNumber" required />
          </div>
          <div class="form-group">
            <label for="brand">Marca</label>
            <input
              type="text"
              class="form-control"
              name="brand"
              required
            />
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-success w-100">Crear carro</button>
          </div>
        </form>
      </div>
    </div>
  </div>
<% include partials/_footer %>
